<body>
    <div class="admin-title">QUẢN LÝ THƯ VIỆN</div>
    <div class="btn-area">
        <button class="btn-task"><a class="btn-link" href="./admin-profile.html">Profile</a></button>
        <button class="btn-task btn-active"><a class="btn-link" href="./admin-staffManager.html">Staff</a></button>
    </div>
    <div class="detail-task">
        <div class="search-area">
            <input type="text" class="search input-custom" id="search" name="search" placeholder="Search by ID">
            <button class="btn-removeStaff bg-green">Find</button>
        </div>
        <div class="removeStaff-items">
            <div class="removeStaff-items-title">Id</div>
            <div class="removeStaff-items-content">xxxxxx</div>
        </div>
        <div class="removeStaff-items">
            <div class="removeStaff-items-title">Name</div>
            <div class="removeStaff-items-content">Nguyen Van A</div>
        </div>
        <div class="removeStaff-items">
            <div class="removeStaff-items-title">Birthday</div>
            <div class="removeStaff-items-content">12/04/2000</div>
        </div>
        <div class="removeStaff-items">
            <div class="removeStaff-items-title">Address</div>
            <div class="removeStaff-items-content">Ho Chi Minh, Viet Nam</div>
        </div>
        <div class="removeStaff-items">
            <div class="removeStaff-items-title">Email</div>
            <div class="removeStaff-items-content">NgVanA@gmail.com</div>
        </div>
        <div class="removeStaff-items">
            <div class="removeStaff-items-title">Phone</div>
            <div class="removeStaff-items-content">0123456789</div>
        </div>
        <div class="removeStaff-items">
            <div class="removeStaff-items-title">Position</div>
            <div class="removeStaff-items-content">Staff</div>
        </div>
        <div class="removeStaff-items">
            <div class="removeStaff-items-title">Salary</div>
            <div class="removeStaff-items-content">50.000.000</div>
        </div>
        <div class="btn-removeStaff-area">
            <button class="btn-removeStaff bg-red">Remove</button>
            <button class="btn-removeStaff bg-yl">Cancel</button>
        </div>
    </div>

</body>
